{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./build/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node-modules", "build"]
}
